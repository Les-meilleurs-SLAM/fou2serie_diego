{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

<div class="d-flex justify-content-center">
    <h1>Series</h1>
</div>
<div class="d-flex justify-content-center">
    <div class="row">
    {% for laSerie in lesSeries %}
    <div class="sm-4">
        <div class="card h-100" style="width: 18rem;">
        <div class="view overlay">
            <a href="{{ path('infoSerie', {'id': laSerie.id}) }}"><img class="card-img-top" src="{{asset('images/'~ laSerie.image)}}" /></a>
        </div>
        <div class="card-body text-center">
            <div class="card-body">
                <h5 class="card-title">{{ laSerie.titre }}</h5>
            </div>
        </div>
        </div>
    </div>
    {% endfor %}
    </div>
</div>
<div class="d-flex justify-content-center">
    {{ knp_pagination_render(lesSeries) }}
</div>

{% endblock %}